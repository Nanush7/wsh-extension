{
  "compilerOptions": {
    "outDir": "./build/scripts",
    "allowJs": true,
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "lib": [
      "es2021",
      "dom",
      "dom.iterable"
    ],
    "noEmitOnError": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true
  },
  "include": ["./scripts/**/*"]
}